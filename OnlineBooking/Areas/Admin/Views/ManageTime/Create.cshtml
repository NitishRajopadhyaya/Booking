<script>
    var i = 0;
    $('#customTimining').hide();
    const checkbox = document.getElementById('checkbox');
    const div = document.getElementById('customTimining');

    checkbox.addEventListener('click', function () {
        if (checkbox.checked) {
            $('#customTimining').show();
        } else {
            $('#customTimining').hide();
        }
    });
    
    var NewRow = function () {
        i = i + 1;
        var row = '<div class="row form-group">'+
                        '<div class="col-md-5" >'+
                                '<label asp-for= "manageDayTime.SunStartDateTime" class= "control-label" > Start Time </label>'+
                                '<input name= "manageSundayMultipleTimes['+i+'].SunStartDateTime" id = "'+i+'s" type = "time" class="form-control" />'+
                        '</div>'+
                        '<div class="col-md-5">'+
                                 '<label asp-for= "manageDayTime.SunEndDateTime" class= "control-label" >SunEndDateTime</label>'+
                                  '<input name= "manageSundayMultipleTimes['+i+'].SunEndDateTime" id = "'+i+'e" type = "time" class= "form-control" />'+
                       '</div>'+
                       '<div class="col-md-1">'+
                                  '<label>Add</label>'+
                                 '<button type="button" onclick="NewRow()" class="btn btn-default form-control">+</button>' +
                       '</div>'+
                       '<div class="col-md-1">'+
                                  '<label>Delete</label>'+
                                  '<button  id="'+i+'" type="buton" onclick="deleteRow(this,this.id)" class="btn btn-default form-control">-</button>'+
                       '</div>'+
                  '</div>';
        $('#customTimeCardBody').append(row);
        
        }
    var deleteRow=function(btn,id){
        var integerNumber = parseInt(id, 10);
        for (var j = integerNumber + 1; j <= i; j++)
        {
            var deleteid = document.getElementById(j);
            var firstElement = document.getElementById(j+'s');
            var secondElement = document.getElementById(j+'e');
            if (firstElement && secondElement) {
                deleteid.id=j-1;
                firstElement.id=j-1+'s';
                secondElement.id = j-1+'e';
                firstElement.name = "manageSundayMultipleTimes["+(j-1)+"].SunStartDateTime";
                secondElement.name = "manageSundayMultipleTimes["+(j-1)+"].SunEndDateTime";
                }
        }
        var row = btn.parentNode.parentNode;
        row.parentNode.removeChild(row);
        i=i-1;
    }

</script>
